{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
<div class="container">
    <h1 style="text-align:center; padding-top: 2rem; padding-bottom: 2rem;">Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Semestre</th>
                <td>{{ cour.semestre.semestre }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cour.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cour.description | raw }}</td>
            </tr>
            <tr>
                <th>Ects</th>
                <td>{{ cour.ects }}</td>
            </tr>
            <tr>
                <th>HeureTp</th>
                <td>{{ cour.heureTp }}</td>
            </tr>
            <tr>
                <th>HeureTd</th>
                <td>{{ cour.heureTd }}</td>
            </tr>
            <tr>
                <th>HeureCm</th>
                <td>{{ cour.heureCm }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ cour.dateCreation | date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Dernière modification</th>
                <td>{{ cour.dateModification | date("d/m/Y") }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user %}
        <div style="display:flex; gap:1rem">
            <a class="btn btn-primary" href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>

            {{ include('cours/_delete_form.html.twig') }}
        </div>
    {% endif %}
</div>
{% endblock %}
